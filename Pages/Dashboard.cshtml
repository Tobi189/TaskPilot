@page
@model TaskPilot.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background-color: #282c34;
        color: #ffffff;
    }

    .dashboard-root {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Top bar */
    .dashboard-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        background-color: #1e1e1e;
        border-bottom: 0.05rem solid #333333;
    }

    .dashboard-title {
        font-size: 1.25rem;
        font-weight: 600;
    }

        .dashboard-title span {
            color: #61dafb;
            font-weight: 700;
        }

    .dashboard-user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.95rem;
    }

    .dashboard-logout {
        padding: 0.4rem 0.9rem;
        border-radius: 999rem;
        border: 0.05rem solid #61dafb;
        background-color: transparent;
        color: #61dafb;
        font-size: 0.85rem;
        cursor: pointer;
        text-decoration: none;
    }

        .dashboard-logout:hover {
            background-color: #61dafb;
            color: #1e1e1e;
        }

    /* Main layout */
    .dashboard-main {
        flex: 1;
        display: flex;
        flex-direction: row;
        gap: 1.5rem;
        padding: 1.5rem;
        box-sizing: border-box;
    }

    /* Left column (actions) */
    .dashboard-sidebar {
        width: 22%;
        max-width: 18rem;
        min-width: 12rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .sidebar-card {
        background-color: #1e1e1e;
        border-radius: 0.75rem;
        padding: 1rem 1.25rem;
        border: 0.05rem solid #333333;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.5);
    }

    .sidebar-heading {
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }

    .btn-new-task {
        width: 100%;
        border: none;
        padding: 0.7rem 1rem;
        border-radius: 0.5rem;
        background-color: #61dafb;
        color: #1e1e1e;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.95rem;
    }

        .btn-new-task:hover {
            background-color: #4fb6e6;
        }

    /* Filter placeholders */
    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 0.75rem;
        font-size: 0.85rem;
    }

    .filter-label {
        opacity: 0.8;
    }

    .filter-select {
        width: 100%;
        padding: 0.4rem 0.6rem;
        border-radius: 0.4rem;
        border: 0.05rem solid #444444;
        background-color: #262626;
        color: #ffffff;
        font-size: 0.85rem;
    }

    /* Right column (task list) */
    .dashboard-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .content-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .content-title {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .content-meta {
        font-size: 0.85rem;
        color: #bbbbbb;
    }

    .task-list {
        background-color: #1e1e1e;
        border-radius: 0.75rem;
        padding: 1rem 1.25rem;
        border: 0.05rem solid #333333;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .task-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 0.6rem 0.4rem;
        border-radius: 0.5rem;
        background-color: #262626;
    }

    .task-main {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        flex: 1;
    }

    .task-title {
        font-size: 0.95rem;
        font-weight: 600;
    }

    .task-preview {
        font-size: 0.8rem;
        color: #bbbbbb;
        opacity: 0.9;
    }

    .task-tags {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.75rem;
    }

    .badge-status,
    .badge-priority {
        padding: 0.18rem 0.55rem;
        border-radius: 999rem;
        border: 0.05rem solid transparent;
        white-space: nowrap;
    }

    .badge-status-pending {
        background-color: #3b3b3b;
        color: #f0f0f0;
    }

    .badge-status-inprogress {
        background-color: #1f4f7f;
        color: #e5f3ff;
    }

    .badge-status-done {
        background-color: #1f5f3b;
        color: #e3ffef;
    }

    .badge-priority-low {
        border-color: #8abf5a;
        color: #c8f3a3;
    }

    .badge-priority-medium {
        border-color: #f5c16b;
        color: #ffe0a6;
    }

    .badge-priority-high {
        border-color: #ff6b6b;
        color: #ffc1c1;
    }

    .task-actions {
        display: flex;
        flex-direction: row;
        gap: 0.4rem;
        font-size: 0.8rem;
        align-items: center;
    }

    .task-link {
        background: none;
        border: none;
        padding: 0.2rem 0.5rem;
        border-radius: 0.4rem;
        cursor: pointer;
        color: #61dafb;
        text-decoration: none;
    }

        .task-link:hover {
            background-color: #1b3b4a;
        }

    .task-empty {
        font-size: 0.9rem;
        color: #bbbbbb;
        text-align: center;
        padding: 1.25rem 0;
    }

    /* New Task modal */
    .new-task-overlay {
        position: fixed;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.65);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

        .new-task-overlay.hidden {
            display: none;
        }

    .new-task-modal {
        width: 90%;
        max-width: 32rem;
        background-color: #1e1e1e;
        border-radius: 0.75rem;
        border: 0.05rem solid #333333;
        box-shadow: 0 0.75rem 2rem rgba(0, 0, 0, 0.7);
        padding: 1.25rem 1.5rem;
        box-sizing: border-box;
    }

    .new-task-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.75rem;
    }

        .new-task-header h2 {
            margin: 0;
            font-size: 1.1rem;
        }

    .new-task-close {
        background: none;
        border: none;
        color: #bbbbbb;
        font-size: 1.4rem;
        cursor: pointer;
    }

        .new-task-close:hover {
            color: #ffffff;
        }

    .new-task-body {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        font-size: 0.9rem;
    }

    .form-row {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .new-task-input,
    .new-task-textarea,
    .new-task-select {
        width: 100%;
        padding: 0.45rem 0.6rem;
        border-radius: 0.4rem;
        border: 0.05rem solid #444444;
        background-color: #262626;
        color: #ffffff;
        font-size: 0.9rem;
        box-sizing: border-box;
    }

        .new-task-input:focus,
        .new-task-textarea:focus,
        .new-task-select:focus {
            outline: none;
            border-color: #61dafb;
            box-shadow: 0 0 0 0.05rem #61dafb;
        }

    .new-task-footer {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .new-task-cancel,
    .new-task-save {
        padding: 0.45rem 0.9rem;
        border-radius: 0.4rem;
        font-size: 0.9rem;
        cursor: pointer;
        border: none;
    }

    .new-task-cancel {
        background-color: transparent;
        color: #bbbbbb;
    }

        .new-task-cancel:hover {
            background-color: #333333;
        }

    .new-task-save {
        background-color: #61dafb;
        color: #1e1e1e;
        font-weight: 600;
    }

        .new-task-save:hover {
            background-color: #4fb6e6;
        }

    /* Basic responsiveness – note the @@ */
    @@media (max-width: 48rem) {
        .dashboard-main {
            flex-direction: column;
        }

        .dashboard-sidebar {
            width: 100%;
            max-width: none;
        }
    }
</style>

<div class="dashboard-root">
    <!-- Modal overlay -->
    <div id="new-task-overlay" class="new-task-overlay hidden">
        <div class="new-task-modal">
            <div class="new-task-header">
                <h2>New Task</h2>
                <button type="button" class="new-task-close" id="closeNewTask">&times;</button>
            </div>

            <form method="post" asp-page-handler="SaveTask">
                <input type="hidden" id="TaskId" name="TaskId" />

                <div class="new-task-body">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input id="Title" name="Title" class="new-task-input" required />
                    </div>

                    <div class="form-group">
                        <label for="Content">Content</label>
                        <textarea id="Content" name="Content" class="new-task-textarea" rows="4"></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="Status">Status</label>
                            <select id="Status" name="Status" class="new-task-select">
                                <option value="pending">Pending</option>
                                <option value="in_progress">In progress</option>
                                <option value="done">Done</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Priority">Priority</label>
                            <select id="Priority" name="Priority" class="new-task-select">
                                <option value="0">Low</option>
                                <option value="1">Medium</option>
                                <option value="2">High</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="new-task-footer">
                    <button type="button" class="new-task-cancel" id="cancelNewTask">Cancel</button>
                    <button type="submit" class="new-task-save">Save task</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="dashboard-title">
            <span>TaskPilot</span> Dashboard
        </div>
        <div class="dashboard-user">
            <span>@Model.Username</span>
            <a asp-page="/Account/Logout" class="dashboard-logout">Logout</a>
        </div>
    </header>

    <!-- Main content -->
    <main class="dashboard-main">
        <!-- Left column: actions -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-card">
                <div class="sidebar-heading">Actions</div>
                <button type="button" class="btn-new-task">
                    + New Task
                </button>

                <div class="filter-group">
                    <div class="filter-label">Status</div>
                    <select class="filter-select">
                        <option>All</option>
                        <option>Pending</option>
                        <option>In progress</option>
                        <option>Done</option>
                    </select>
                </div>

                <div class="filter-group">
                    <div class="filter-label">Priority</div>
                    <select class="filter-select">
                        <option>All</option>
                        <option>Low</option>
                        <option>Medium</option>
                        <option>High</option>
                    </select>
                </div>
            </div>
        </aside>

        <!-- Right column: task list -->
        <section class="dashboard-content">
            <div class="content-header">
                <div class="content-title">Your tasks</div>
                <div class="content-meta">
                    Overview of your current tasks
                </div>
            </div>

            <div class="task-list">
                @if (Model.Tasks == null || Model.Tasks.Count == 0)
                {
                    <div class="task-empty">
                        You don't have any tasks yet. Click "New Task" to create one.
                    </div>
                }
                else
                {
                    @foreach (var task in Model.Tasks)
                    {
                        var statusClass = task.Status switch
                        {
                            "in_progress" => "badge-status-inprogress",
                            "done" => "badge-status-done",
                            _ => "badge-status-pending"
                        };

                        var statusLabel = task.Status switch
                        {
                            "in_progress" => "In progress",
                            "done" => "Done",
                            "pending" => "Pending",
                            _ => task.Status
                        };

                        var priorityClass = task.Priority switch
                        {
                            2 => "badge-priority-high",
                            1 => "badge-priority-medium",
                            _ => "badge-priority-low"
                        };

                        var priorityLabel = task.Priority switch
                        {
                            2 => "High",
                            1 => "Medium",
                            _ => "Low"
                        };

                        <div class="task-row">
                            <div class="task-main">
                                <div class="task-title">@task.Title</div>
                                <div class="task-preview">
                                    @task.Content
                                </div>
                                <div class="task-tags">
                                    <span class="badge-status @statusClass">@statusLabel</span>
                                    <span class="badge-priority @priorityClass">@priorityLabel</span>
                                </div>
                                <div class="task-meta">
                                    Created @task.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                    · Updated @task.UpdatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                </div>

                            </div>
                            <div class="task-actions">
                                <button type="button"
                                        class="task-link edit-task-button"
                                        data-id="@task.Id"
                                        data-title="@task.Title"
                                        data-content="@task.Content"
                                        data-status="@task.Status"
                                        data-priority="@task.Priority">
                                    Edit
                                </button>

                                <form method="post" asp-page-handler="DeleteTask" style="display:inline">
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <button type="submit" class="task-link">Delete</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            </div>
        </section>
    </main>
</div>

<script>
    (function () {
        const overlay = document.getElementById("new-task-overlay");
        const openBtn = document.querySelector(".btn-new-task");
        const closeBtn = document.getElementById("closeNewTask");
        const cancelBtn = document.getElementById("cancelNewTask");

        const taskIdInput = document.getElementById("TaskId");
        const titleInput = document.getElementById("Title");
        const contentInput = document.getElementById("Content");
        const statusSelect = document.getElementById("Status");
        const prioritySelect = document.getElementById("Priority");
        const headerTitle = document.querySelector(".new-task-header h2");
        const saveButton = document.querySelector(".new-task-save");
        const editButtons = document.querySelectorAll(".edit-task-button");

        if (!overlay || !openBtn) return;

        function openModal() {
            overlay.classList.remove("hidden");
        }

        function closeModal() {
            overlay.classList.add("hidden");
        }

        function openForCreate() {
            if (taskIdInput) taskIdInput.value = "";
            if (titleInput) titleInput.value = "";
            if (contentInput) contentInput.value = "";
            if (statusSelect) statusSelect.value = "pending";
            if (prioritySelect) prioritySelect.value = "0";
            if (headerTitle) headerTitle.textContent = "New Task";
            if (saveButton) saveButton.textContent = "Save task";
            openModal();
        }

        function openForEdit(btn) {
            const id = btn.getAttribute("data-id");
            const title = btn.getAttribute("data-title") || "";
            const content = btn.getAttribute("data-content") || "";
            const status = btn.getAttribute("data-status") || "pending";
            const priority = btn.getAttribute("data-priority") || "0";

            if (taskIdInput) taskIdInput.value = id;
            if (titleInput) titleInput.value = title;
            if (contentInput) contentInput.value = content;
            if (statusSelect) statusSelect.value = status;
            if (prioritySelect) prioritySelect.value = priority;
            if (headerTitle) headerTitle.textContent = "Edit Task";
            if (saveButton) saveButton.textContent = "Save changes";
            openModal();
        }

        // + New Task button
        openBtn.addEventListener("click", function () {
            openForCreate();
        });

        if (closeBtn) {
            closeBtn.addEventListener("click", closeModal);
        }
        if (cancelBtn) {
            cancelBtn.addEventListener("click", closeModal);
        }

        overlay.addEventListener("click", function (e) {
            if (e.target === overlay) {
                closeModal();
            }
        });

        // Edit buttons on each row
        editButtons.forEach(function (btn) {
            btn.addEventListener("click", function () {
                openForEdit(btn);
            });
        });
    })();
</script>
